### KEYBINDINGS ###

set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Use amixer to adjust volume in ALSA
#bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -M set Master 4%+
#bindsym XF86AudioLowerVolume exec--no-startup-id  amixer -M set Master 4%-
#bindsym XF86AudioMute exec--no-startup-id  amixer -M set Master toggle

# Use pactl to adjust volume in Pulse Audio
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.config/i3/volume up
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.config/i3/volume down
bindsym XF86AudioMute exec--no-startup-id pactl set-sink-mute 0 toggle

# Use xbacklight to adjust screen backlight
#bindsym XF86MonBrightnessUp exec--no-startup-id xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec--no-startup-id xbacklight -dec 10
bindsym XF86MonBrightnessUp exec--no-startup-id $HOME/.config/i3/backlight up
bindsym XF86MonBrightnessDown exec--no-startup-id $HOME/.config/i3/backlight down

# Start a terminal
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
# bindsym $mod+Return exec --no-startup-id wezterm

# Show program launcher
bindsym $mod+space exec --no-startup-id "rofi -theme 'sidebar-monokaipro-spectrum' -show drun"
# Show run prompt
bindsym $mod+grave exec --no-startup-id "rofi -theme 'sidebar-monokaipro-spectrum' -show run"
# Show window list
bindsym $mod+Tab exec --no-startup-id "rofi -theme 'sidebar-monokaipro-spectrum' -show window"
# Show emoji picker
bindsym $mod+semicolon exec "rofimoji"

# Kill focused window
bindsym $mod+q kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split in vertical orientation
bindsym $mod+v split v
# Split in horizontal orientation
bindsym $mod+Mod1+v split h

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+i layout toggle split

# Change focus between tiling / floating windows
bindsym $mod+c focus mode_toggle

# Focus the parent container
bindsym $mod+p focus parent

# Focus the child container
bindsym $mod+n focus child

# Switch to adjacent workspace
bindsym $mod+bracketleft workspace prev
bindsym $mod+bracketright workspace next

# Move focused container to adjacent workspace
bindsym $mod+Shift+bracketleft move container to workspace prev
bindsym $mod+Shift+bracketright move container to workspace next

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

#workspace $ws2 gaps inner 6 
#workspace $ws2 gaps outer 6 

# Not working?
#assign [class="Firefox"] $ws2

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload the configuration file
bindsym $mod+Escape reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Mod1+Escape restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Modeless resize
bindsym $mod+Mod1+h resize shrink width 5 px or 5 ppt
bindsym $mod+Mod1+j resize grow height 5 px or 5 ppt
bindsym $mod+Mod1+k resize shrink height 5 px or 5 ppt
bindsym $mod+Mod1+l resize grow width 5 px or 5 ppt


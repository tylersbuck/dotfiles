### GENERAL CONFIGURATION ###

# Don't focus windows when the mouse hovers over them
focus_follows_mouse no

# Don't warp to focused monitor
mouse_warping none

set $bordersize 2
# Set default border, won't show the titlebar unless tabbed or stacked
default_border pixel $bordersize
# If using gaps it's required to hide window titlebars everywhere
# This will still show titlebars for tabbed and stacked windows
for_window [class=".*`"] border pixel $bordersize

# Define window gap sizes
# gaps inner 12 
gaps inner 0 
gaps outer 0

### BAR ###

exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#bar {
#        status_command i3status
#	font pango:monospace 8
#}

### THEME ###

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block.
font pango:monospace 3
#font pango:Cure, Stlarch 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Focused color
set $foc #69676c
# Inactive color
set $ina #5f676a 
# Unfocused color
set $unf #363537
# Placeholder color
set $plc #131313
# Urgent color
set $urg #fc618d

# Focused border color
set $fbc #69676c 
# Unfocused border color
set $ubc #131313

# <class> 		        <border> <background> <text>   <indicator> <child_border>
client.focused 		    $foc     $foc         $foc     $foc        $fbc   
client.focused_inactive     $ina     $ina         $ina     $ina        $ubc   
client.unfocused 	    $unf     $unf         $unf     $unf        $ubc   
client.placeholder 	    $plc     $plc         $plc     $plc        $ubc   
client.urgent 		    $urg     $urg         $urg     $urg        $urg   

